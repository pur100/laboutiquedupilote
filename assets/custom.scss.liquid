// Featured collection

.featured-collection-section {
  .flickity-button-icon {
    display: none;
  }
  .gallery-cell {
       text-align: center;
       padding: 0;
       margin-bottom: 0;
       background-color: white;
       height: 536px;
       display: flex;
       flex-direction: column;
       justify-content: space-between;
       align-items: center;
  }

  .product-wrap {
    margin-top: 13px;

  }

  .homepage-product-slider.even-num-slides {
      padding-left: 10px;
      width: 90% !important;
  }
}

// BOUTIQUES

#section-1586515979325 {
  width: 90%;
  margin: 0 auto;


  .main_boutique_container {
    display: flex;
    text-align: center;
    justify-content: space-between;
    align-items: center;


    .icon {
      width: 80px;
      height: 100px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
    }

    .phone_icon {
      margin-left: 45px;
      margin-right: 20px;
    }


    .calendar_icon {
      margin-left: 51px;
      margin-right: 60px;
    }

    .phone {
      display: flex;
      align-items: center;
      width: 40%;
      background-color: #FECB2F;
      height: 140px;
      margin: 40px 10px;
      height: 150px;

      .phone_info {
        font-size: 16px;

        .tel {
          font-family: Roboto;
          font-style: normal;
          font-weight: 900;
          font-size: 24px;
          line-height: 97.75%;
          margin-top: 12px;
        }
      }
    }

    .hours_and_directions {
      display: flex;
      align-items: center;
      width: 60%;
      height: 140px;
      margin: 40px 10px;
      border: solid 1px black;
      text-align: left !important;
      font-size: 16px;
      height: 150px;
    }

    .hours {
      font-family: Roboto;
      font-style: normal;
      font-weight: 900;
      font-size: 24px;
      line-height: 97.75%;
      margin-bottom: 12px;

    }
  }

  .boutiques_container {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50px;

    .boutique_block {
      background-color: white;
      margin: 10px;
      width: 238px;
      height: 335px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
  }

}
