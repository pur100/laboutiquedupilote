// FONTS
  @font-face {
    font-family: 'nanum-regular';
    src: url('{{ "NanumGothic-Regular.ttf" | asset_url }}');
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: 'nanum-bold';
    src: url('{{ "NanumGothic-Bold.ttf" | asset_url }}');
    font-weight: normal;
    font-style: normal;
  }

  h2 {
    font-family: 'nanum-bold' !important;
  }

  h3 {
    font-family: 'nanum-regular';
    font-style: normal;
    font-weight: bold;
    font-size: 34px;
    line-height: 34px;
    text-align: center;
  }

//HEADER

  .nav {
    li {

      a {
        text-transform: uppercase;
      }
    }
  }

  .logo--image {
    position: absolute;
    left: 43%;
    margin-top: 10px;
  }

  .top_bar {
    height: 80px;
    padding: 0 !important;
    border-bottom: solid white 1px;
  }


    .right {
      margin-top: 22px;
    }

    .left, .cart_container {
      margin-top: 22px;
    }

  #search_icon {
    height: 21px;
    margin-top: 9px;
  }


  .search_dropdown {
   position: absolute;
       width: 318px;
       right: -4px;
       top: 40px;
       z-index: 1000;
       background-color: black;
       height: 90px;

    .header_search_form {
      width: 100% !important;

    }
  }

  #search_li {
    position: relative;
  }

  .sticky_nav {
    width: 100% !important;
  }

  .nav {
      width: 100% !important;
  }

  .mini_cart {
    height: 48px !important;
  }

  .mini_cart, .nav a.mini_cart {
      float: right;
      text-align: center;
      cursor: pointer;
      background-color: #524D45 !important;
      padding-left: 5px;
      padding-right: 5px;
      margin-left: 5px;
      height: 40px;
      z-index: 2001;
  }


  .search_dropdown {
      display: none;
  }

  #search_li:hover {
    .search_dropdown {
          display: block;
      }

  }

