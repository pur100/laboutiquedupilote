  }

  .boutiques_container {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50px;

    .boutique_block {
      background-color: white;
      margin: 10px;
      width: 238px;
      height: 335px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
  }

}

