<div id="section-{{section.id}}">


  <div class="sixteen-columns main_boutique_container" >
    <div class="phone">
      <div class="phone_icon icon">
        <img src="https://cdn.shopify.com/s/files/1/0346/5065/2808/files/Phone.png?v=1586517937" alt="">
      </div>
      <div class="phone_info ">
        <div class="" style="font-weight: bold">LA BOUTIQUE DU PILOTE</div>
        <div class="">La boutique en ligne est joignable au :</div>
        <div class="tel">{{ section.settings.tel }}</div>
      </div>
    </div>
    <div class="hours_and_directions">
      <div class="calendar_icon icon">
        <img src="https://cdn.shopify.com/s/files/1/0346/5065/2808/files/Calendar.png?v=1586517964" alt="">
      </div>
      <div class="hours_details">
          <div class="hours">{{ section.settings.hours }}</div>
          <div class="address1">{{ section.settings.addressa }}</div>
          <div class="address2">{{ section.settings.addressb }}</div>
        </div>
      </div>
  </div>

  <div class="sixtee-columns boutiques_container">
    {% for block in section.blocks %}
      <div class="boutique_block">
        <div class="directions">
          {{ block.settings.directions }}
        </div>
        <div class="horaires">
          {{ block.settings.horaires }}
        </div>
        <div class="contact">
          {{ block.settings.contact }}
        </div>
      </div>
    {% endfor %}
  </div>

</div>



{% schema %}
  {
    "name": "Boutique Contact",
    "class": "logo-list-section",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Logo list"
      },
      {
        "type": "text",
        "id": "tel",
        "label": "Téléphone",
        "default": "01 39 56 29 70"
      }
      ,

            {
              "type": "text",
              "id": "hours",
              "label": "Horaires",
              "default": "01 39 56 29 70"
            },
            {
              "type": "text",
              "id": "addressa",
              "label": "Addresse ligne 1",
              "default": "01 39 56 29 70"
            }
            ,
                  {
                    "type": "text",
                    "id": "addressb",
                    "label": "Addresse ligne 2",
                    "default": "01 39 56 29 70"
                  }
    ],
    "blocks": [

      {
        "type": "Text",
        "name": "Boutique",
        "settings": [
          {
            "type": "html",
            "id": "directions",
            "label": "Adresse"
          },
         {
           "type": "html",
           "id": "horaires",
           "label": "Horaires"
         },
         {
           "type": "html",
           "id": "contact",
           "label": "Contact"
         }
        ]
      }
    ]
  }
{% endschema %}
